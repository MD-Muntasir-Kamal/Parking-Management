<odoo>
    <!--For tree view-->
    <record id="view_employee_parking_tree" model="ir.ui.view">
        <field name="name">employee.parking.reg.tree</field>
        <field name="model">employee.parking.reg</field>
        <field name="arch" type="xml">
            <tree>
                <field name="emp_type" string="Employee Type"/>
                <field name="name" string="Name"/>
                <field name="reg_no" string="Registration No"/>
                <field name="vehicle_num" string="Vehicle Number"/>
                <field name="phone_num" string="Phone No"/>

            </tree>
        </field>
    </record>
    <!--End of tree view-->

    <!--    For Kanban View-->
    <record id="view_employee_parking_kanban" model="ir.ui.view">
        <field name="name">employee.parking.reg.kanban</field>
        <field name="model">employee.parking.reg</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="emp_type"/>
                <field name="name"/>
                <field name="reg_no"/>
                <field name="vehicle_num"/>
                <field name="phone_num"/>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div>
                                <strong>
                                    <h3>
                                        <field name="name" class="test-heading"/>
                                    </h3>
                                </strong>
                            </div>
                            <div>
                                <field name="emp_type"/>
                            </div>
                            <div>
                                <field name="vehicle_num"/>
                            </div>
                            <!--  <field name="image" widget="image" class="oe_avatar" options="{'size': [150, 150]}"/>-->
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- For form view -->
    <record id="view_employee_parking_form" model="ir.ui.view">
        <field name="name">employee.parking.reg.form</field>
        <field name="model">employee.parking.reg</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h2>
                            <field name="emp_type" string="Employee Type"/>
                        </h2>
                        <h4>
                            <label for='name' string='Employee Name' class="oe_edit_only"/>
                            <field name="name"/>
                        </h4>
                        <h6>
                            <label for='reg_no' string='Registration No' class="oe_edit_only"/>
                            <field name="reg_no"/>
                        </h6>
                    </div>
                    <group>
                        <group>
                            <field name="vehicle_num" string="Vehicle Number"/>
                            <field name="gender" string="Gender"/>
                        </group>
                        <group>
                            <field name="phone_num" string="Phone No"/>
                            <field name="email" string="Email"/>
                            <field name="barcode" string="Barcode" widget="barcode" barcode_format="CODE128"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- For kiosk mode view -->
    <record id="view_employee_parking_form_kiosk" model="ir.ui.view">
        <field name="name">employee.parking.reg.form.kiosk</field>
        <field name="model">employee.parking.reg</field>
        <field name="inherit_id" ref="view_employee_parking_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//sheet/group/group/field[@name='barcode']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/group/group" position="after">
                    <group>
                        <field name="barcode" string="Scanned Barcode" readonly="1"/>
                    </group>
                </xpath>
            </data>
        </field>
    </record>

    <!-- For action window -->
    <record id="action_employee_parking" model="ir.actions.act_window">
        <field name="name">Employee Registration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.parking.reg</field>
        <field name="view_mode">tree,form,search,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Your First customer!
            </p>
        </field>
        <!--        <field name="flags">{"barcode_scanned": true}</field>-->
    </record>

    <!-- For kiosk mode action window -->
    <record id="action_employee_parking_kiosk" model="ir.actions.act_window">
        <field name="name">Employee Registration (Kiosk Mode)</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.parking.reg</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_employee_parking_form_kiosk"/>
        <field name="context">{"kiosk_mode": True}</field>
    </record>


</odoo>
